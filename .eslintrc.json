{
    "ignorePatterns": [
        "node_modules/*",
        "coverage/*",
        "definitions/*",
        "ccd-definition-processor/*",
        "test/helpers/utils.js",
        "test/reporter/*",
        "test/functional/*"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "mocha": true,
        "codeceptjs/codeceptjs": true,
        "es2021": true
    },
    "extends":[
        "plugin:playwright/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false,
        "ecmaVersion": 2019
    },
    "plugins": ["mocha", "codeceptjs", "playwright"],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error", "never"
        ],
        "eqeqeq": "error",
        "require-yield": "off",
        "indent": ["error", 2],
        "mocha/no-exclusive-tests": "error",
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreComments": true,
                "ignoreTrailingComments": true,
                "ignoreRegExpLiterals": true,
                "ignorePattern": ".*exports.*=.*class.*|.*if \\(.*\\)|.*\\?.*\\:.*|.*\\|\\|.*|.*\\&\\&.*"
            }
        ],
        "arrow-body-style": ["error", "always"],
        "no-process-env": "off",
        "no-magic-numbers": [
            "error",
            {
                "ignoreArrayIndexes": true,
                "enforceConst" : true,
                "ignore": [
                    -1, 0, 1
                ]
            }
        ],
        "max-nested-callbacks": [
            "error", 5
        ],
        "max-depth": [
            "error", 4
        ],
        "new-cap": "off",
        "no-sync": "off",
        "max-lines": "off",
        "operator-linebreak": "off",
        "no-console": "off"
    }
}
