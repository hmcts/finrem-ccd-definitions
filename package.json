{
  "name": "finrem-ccd-definitions",
  "version": "1.0.0",
  "description": "Utility to help creating CCD config definitions",
  "main": "index.js",
  "repository": "git@github.com:hmcts/fr-ccd-definitions.git",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=11.10.1"
  },
  "config": {
    "local": {
      "cosUrl": "http://host.docker.internal:4012",
      "ccdUrl": "http://localhost:4452"
    },
    "demo": {
      "cosUrl": "http://finrem-cos-demo.service.core-compute-demo.internal",
      "ccdUrl": "http://ccd-data-store-api-demo.service.core-compute-demo.internal"
    },
    "aat": {
      "cosUrl": "http://finrem-cos-aat.service.core-compute-aat.internal",
      "ccdUrl": "http://ccd-data-store-api-aat.service.core-compute-aat.internal"
    },
    "ithc": {
      "cosUrl": "http://finrem-cos-ithc.service.core-compute-ithc.internal",
      "ccdUrl": "http://ccd-data-store-api-ithc.service.core-compute-ithc.internal"
    },
    "prod": {
      "cosUrl": "http://finrem-cos-prod.service.core-compute-prod.internal",
      "ccdUrl": "http://ccd-data-store-api-prod.service.core-compute-prod.internal"
    }
  },
  "scripts": {
    "reset-ccd-submodule": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin master && yarn --cwd ccd-definition-processor install",
    "setup": "git submodule update --init --recursive && yarn --cwd ccd-definition-processor install",
    "lint": "eslint --fix .",
    "test": "NODE_PATH=. mocha test/unit/**/*.js",
    "test:all": "yarn lint; yarn test; yarn test:a11y; yarn test:functional; yarn audit",
    "test:coverage": "echo test:coverage",
    "test:a11y": "echo test:a11y",
    "test:smoke": "echo smoke",
    "test:functional": "codeceptjs run --steps -c test/functional/codecept.conf.js",
    "start": "node index.js",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",

    "generate-json-consented": "yarn --cwd ccd-definition-processor xlsx2json -D ../definitions/consented/json -i ../definitions/consented/xlsx/ccd-config-base-consented.xlsx && pretty-quick --pattern 'definitions/**/json/**.json'",
    "generate-excel-consented": "yarn --cwd ccd-definition-processor json2xlsx -D ../definitions/consented/json -o ../definitions/consented/xlsx/ccd-config-${FR_ENV:-base}-consented.xlsx",
    "generate-excel-local-consented": "FR_ENV=local CCD_DEF_COS_URL=$npm_package_config_local_cosUrl CCD_DEF_CCD_URL=$npm_package_config_local_ccdUrl yarn run generate-excel-consented",
    "generate-excel-demo-consented": "FR_ENV=demo CCD_DEF_COS_URL=$npm_package_config_demo_cosUrl CCD_DEF_CCD_URL=$npm_package_config_demo_ccdUrl yarn run generate-excel-consented",
    "generate-excel-aat-consented": "FR_ENV=aat CCD_DEF_COS_URL=$npm_package_config_aat_cosUrl CCD_DEF_CCD_URL=$npm_package_config_aat_ccdUrl yarn run generate-excel-consented",
    "generate-excel-ithc-consented": "FR_ENV=ithc CCD_DEF_COS_URL=$npm_package_config_ithc_cosUrl CCD_DEF_CCD_URL=$npm_package_config_ithc_ccdUrl yarn run generate-excel-consented",
    "generate-excel-prod-consented": "FR_ENV=prod CCD_DEF_COS_URL=$npm_package_config_prod_cosUrl CCD_DEF_CCD_URL=$npm_package_config_prod_ccdUrl yarn run generate-excel-consented -e *-nonprod.json",
    "generate-excel-all-consented": "yarn generate-excel-consented && yarn generate-excel-local-consented && yarn generate-excel-demo-consented && yarn generate-excel-aat-consented && yarn generate-excel-prod-consented",

    "generate-json-contested": "yarn --cwd ccd-definition-processor xlsx2json -D ../definitions/contested/json -i ../definitions/contested/xlsx/ccd-config-base-contested.xlsx && pretty-quick --pattern 'definitions/**/json/**.json'",
    "generate-excel-contested": "yarn --cwd ccd-definition-processor json2xlsx -D ../definitions/contested/json -o ../definitions/contested/xlsx/ccd-config-${FR_ENV:-base}-contested.xlsx",
    "generate-excel-local-contested": "FR_ENV=local CCD_DEF_COS_URL=$npm_package_config_local_cosUrl CCD_DEF_CCD_URL=$npm_package_config_local_ccdUrl yarn run generate-excel-contested",
    "generate-excel-demo-contested": "FR_ENV=demo CCD_DEF_COS_URL=$npm_package_config_demo_cosUrl CCD_DEF_CCD_URL=$npm_package_config_demo_ccdUrl yarn run generate-excel-contested",
    "generate-excel-aat-contested": "FR_ENV=aat CCD_DEF_COS_URL=$npm_package_config_aat_cosUrl CCD_DEF_CCD_URL=$npm_package_config_aat_ccdUrl yarn run generate-excel-contested",
    "generate-excel-ithc-contested": "FR_ENV=ithc CCD_DEF_COS_URL=$npm_package_config_ithc_cosUrl CCD_DEF_CCD_URL=$npm_package_config_ithc_ccdUrl yarn run generate-excel-contested",
    "generate-excel-prod-contested": "FR_ENV=prod CCD_DEF_COS_URL=$npm_package_config_prod_cosUrl CCD_DEF_CCD_URL=$npm_package_config_prod_ccdUrl yarn run generate-excel-contested  -e *-nonprod.json",
    "generate-excel-all-contested": "yarn generate-excel-contested && yarn generate-excel-local-contested && yarn generate-excel-demo-contested && yarn generate-excel-aat-contested && yarn generate-excel-prod-contested"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "1.5.1",
    "@hmcts/properties-volume": "0.0.8",
    "codeceptjs": "^2.2.0",
    "config": "^3.0.1",
    "eslint-plugin-codeceptjs": "^1.0.0",
    "express": "^4.16.4",
    "puppeteer": "^1.20.0"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "@shinnn/eslint-config-node": "^6.0.2",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "husky": "^2.2.0",
    "loadsh": "^0.0.4",
    "mocha": "^6.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "sonar-scanner": "^3.1.0"
  },
  "resolutions": {
    "eslint-utils": "^1.4.1",
    "https-proxy-agent": "2.2.3"
  }
}
